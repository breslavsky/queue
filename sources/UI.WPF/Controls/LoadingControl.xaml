<UserControl x:Class="Queue.UI.WPF.LoadingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             lex:ResxLocalizationProvider.DefaultAssembly="Queue.UI.WPF"
             lex:ResxLocalizationProvider.DefaultDictionary="Strings">
    <UserControl.Background>
        <SolidColorBrush Opacity="0.5" Color="White" />
    </UserControl.Background>
    <Viewbox Width="300" Margin="50">
        <Label Content="{lex:Loc Loading}" Foreground="{DynamicResource AccentColorBrush}" />
    </Viewbox>
</UserControl>